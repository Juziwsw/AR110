<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_text_receive"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/lib_gray_color_level_3"
        android:textSize="12sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <com.hiscene.imui.widget.NiceImageView
            android:id="@+id/chat_item_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:border_color="@color/avatar_border_color"
            app:border_width="@dimen/avatar_border_size"
            app:corner_radius="@dimen/reference_corner_radius"
            app:is_circle="true"
            app:is_cover_src="true"
            app:text_color="@color/avatar_text_color"
            android:layout_marginEnd="5dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerInside"
            android:src="@drawable/default_portrait" />

        <TextView
            android:id="@+id/chat_item_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/chat_item_header"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/chat_item_header"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="#ff666666"
            android:textSize="12sp"
            tools:text="王二小王二小王二小王二小王二小王二小王二小王二小王二小王二小" />

        <LinearLayout
            android:id="@+id/chat_item_layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_text_receive"
            android:layout_marginRight="20dp"
            android:layout_below="@id/chat_item_name"
            android:layout_toRightOf="@id/chat_item_header"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call_left"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                tools:text="对方已取消"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
