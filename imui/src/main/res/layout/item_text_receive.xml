<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_text_receive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/lib_gray_color_level_3"
        android:textSize="12sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp">

        <com.hiscene.imui.widget.NiceImageView
            android:id="@+id/chat_item_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/default_portrait"
            android:transitionName="avatarTransform"
            app:corner_radius="@dimen/reference_corner_radius"
            app:is_circle="true"
            app:is_cover_src="true"
            app:text_color="@color/avatar_text_color" />

        <TextView
            android:id="@+id/chat_item_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/chat_item_header"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/chat_item_header"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="#ff666666"
            android:textSize="12sp"
            tools:text="王二小王二小王二小王二小王二小王二小王二小王二小王二小王二小" />

        <LinearLayout
            android:id="@+id/chat_item_layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chat_item_name"
            android:layout_toRightOf="@id/chat_item_header"
            android:background="@drawable/message_text_receive"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chat_item_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="14sp"
                tools:text="你好长风破浪会能时，不不风的季节有城不风的季节有城霏霏在城区地有地夺地在有霏霏在城区地有地夺地在有风的季节有城霏霏在城区地有地夺地在有" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
