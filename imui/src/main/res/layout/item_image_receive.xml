<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_text_receive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/lib_gray_color_level_3"
        android:textSize="12sp"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <com.hiscene.imui.widget.NiceImageView
            android:id="@+id/chat_item_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:corner_radius="@dimen/reference_corner_radius"
            app:is_circle="true"
            app:is_cover_src="true"
            app:text_color="@color/avatar_text_color"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/default_portrait" />

        <RelativeLayout
            android:id="@+id/chat_item_layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/chat_item_header"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <com.hiscene.imui.widget.BubbleImageView
                android:id="@+id/bivPic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                 app:angle="6dp"
                app:arrowHeight="8dp"
                app:arrowLocation="left"
                app:arrowPosition="15dp"
                app:arrowWidth="5dp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
