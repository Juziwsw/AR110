<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_coner_bg"
    >

    <TextView
        android:id="@+id/text_sound_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:textColor="#A2B0CC"
        android:textSize="12sp"
        android:text="出警声音报警"
        />

    <ImageView
        android:id="@+id/img_devider_all"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/myinfo_devicer_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_sound_title" />
    
    <TextView
        android:id="@+id/text_sound_all"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="@string/alarm_type_all"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/img_devider_all"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/img_devider_important"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/myinfo_devicer_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_sound_all" />

    <TextView
        android:id="@+id/text_sound_important"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="@string/alarm_type_important"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/img_devider_important"
        android:clickable="true"
        />

    <View
        android:id="@+id/base_divider_sound"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#EAF1F9"
        app:layout_constraintTop_toBottomOf="@id/text_sound_important" />


    <TextView
        android:id="@+id/text_sound_cancel"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:textColor="#0D67E5"
        android:textSize="16sp"
        android:text="取消"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/base_divider_sound"
        android:clickable="true"
        />

</androidx.constraintlayout.widget.ConstraintLayout>