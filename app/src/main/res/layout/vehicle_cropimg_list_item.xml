<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_coner_bg"
    >
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_crop_pic"
        android:layout_width="72dp"
        android:layout_height="55dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:scaleType="fitXY"
        />
    
    <TextView
        android:id="@+id/text_date_content"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/img_crop_pic"
        app:layout_constraintRight_toRightOf="@id/img_crop_pic"
        app:layout_constraintTop_toBottomOf="@id/img_crop_pic"
        android:layout_marginTop="4dp"
        android:textColor="#9197A6"
        android:textSize="10sp"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>