<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D68DB"
    >

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_headline"
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <RelativeLayout
                android:id="@+id/layout_back"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:clickable="true"
                >

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_qbak" />

            </RelativeLayout>

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/jingdan_list_title"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_commu_phone"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@id/layout_headline"
            android:layout_centerHorizontal="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/jd_devider_line"
                android:layout_width="336dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/jd_devider_line" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >

                <TextView
                    android:id="@+id/text_commu_notice"
                    android:layout_width="126dp"
                    android:layout_height="25dp"
                    android:gravity="left|center_vertical"
                    android:text="指挥中心通讯中"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_commu_icon"
                    android:layout_width="17dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/text_commu_notice"
                    android:src="@drawable/icon_mai_max" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:id="@+id/text_showInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/brown"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone"
        />
</RelativeLayout>