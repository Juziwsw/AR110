<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/glass_second_layout"
    android:layout_width="1920px"
    android:layout_height="1080px"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_glass_content_show"
        android:layout_width="1411px"
        android:layout_height="650px"
        android:layout_marginEnd="48px"
        android:layout_marginBottom="90px"
        android:background="@drawable/mk_default_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_car_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/img_car_glass"
                android:layout_width="780px"
                android:layout_height="426px"
                android:layout_marginStart="115.5px"
                android:layout_marginTop="99px"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_legal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="54px"
                app:layout_constraintLeft_toLeftOf="@id/img_car_glass"
                app:layout_constraintTop_toBottomOf="@id/img_car_glass"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                />

            <TextView
                android:id="@+id/text_driver_idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="54px"
                app:layout_constraintLeft_toRightOf="@id/text_legal_name"
                app:layout_constraintTop_toTopOf="@id/text_legal_name"
                app:layout_constraintBottom_toBottomOf="@id/text_legal_name"
                android:layout_marginStart="12dp"
                />

            <View
                android:id="@+id/car_glass_outline"
                android:layout_width="410px"
                android:layout_height="650px"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_platenum_glass"
                android:layout_width="390px"
                android:layout_height="wrap_content"
                android:layout_marginTop="168px"
                android:textColor="#FFFFFF"
                android:textSize="65px"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="@id/car_glass_outline"
                app:layout_constraintRight_toRightOf="@id/car_glass_outline"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/content_divider_line_glass"
                android:layout_width="324px"
                android:layout_height="4px"
                android:layout_marginTop="16px"
                android:background="@drawable/icon_line_normal"
                app:layout_constraintLeft_toLeftOf="@id/car_glass_outline"
                app:layout_constraintRight_toRightOf="@id/car_glass_outline"
                app:layout_constraintTop_toBottomOf="@id/text_platenum_glass" />

            <TextView
                android:id="@+id/text_car_brand_glass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22px"
                android:textColor="#ffffff"
                android:textSize="54px"
                app:layout_constraintLeft_toLeftOf="@id/car_glass_outline"
                app:layout_constraintRight_toRightOf="@id/car_glass_outline"
                app:layout_constraintTop_toBottomOf="@id/content_divider_line_glass" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_glass_color_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21px"
                app:layout_constraintLeft_toLeftOf="@id/car_glass_outline"
                app:layout_constraintRight_toRightOf="@id/car_glass_outline"
                app:layout_constraintTop_toBottomOf="@id/text_car_brand_glass">

                <TextView
                    android:id="@+id/text_car_type_glass"
                    android:layout_width="wrap_content"
                    android:layout_height="48px"
                    android:layout_marginTop="25px"
                    android:textColor="@color/white"
                    android:textSize="42px"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_car_color_glass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20px"
                    android:textColor="#ffffff"
                    android:textSize="36px"
                    app:layout_constraintBottom_toBottomOf="@id/text_car_type_glass"
                    app:layout_constraintLeft_toRightOf="@id/text_car_type_glass"
                    app:layout_constraintTop_toTopOf="@id/text_car_type_glass" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/text_car_tag_glass"
                android:layout_width="390px"
                android:layout_height="wrap_content"
                android:layout_marginStart="36px"
                android:layout_marginTop="16px"
                android:textColor="#FF2612"
                android:maxLines="4"
                android:ellipsize="end"
                android:textSize="37px"
                app:layout_constraintLeft_toLeftOf="@id/content_divider_line_glass"
                app:layout_constraintRight_toRightOf="@id/content_divider_line_glass"
                app:layout_constraintTop_toBottomOf="@id/layout_glass_color_type" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/people_result_glass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">


            <ImageView
                android:id="@+id/glass_face_lib"
                android:layout_width="300px"
                android:layout_height="424px"
                android:layout_marginStart="130px"
                android:layout_marginTop="72px"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/glass_conf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24px"
                android:gravity="center"
                android:textColor="#21D82D"
                android:textSize="54px"
                app:layout_constraintBottom_toBottomOf="@id/glass_face_lib"
                app:layout_constraintLeft_toRightOf="@id/glass_face_lib"
                app:layout_constraintTop_toTopOf="@id/glass_face_lib" />


            <ImageView
                android:id="@+id/glass_face_crop"
                android:layout_width="300px"
                android:layout_height="426px"
                android:layout_marginStart="24px"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@id/glass_face_lib"
                app:layout_constraintLeft_toRightOf="@id/glass_conf"
                app:layout_constraintTop_toTopOf="@id/glass_face_lib" />

            <TextView
                android:id="@+id/glass_people_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:textColor="@color/glass_text_color"
                android:textSize="54px"
                app:layout_constraintLeft_toLeftOf="@id/glass_face_lib"
                app:layout_constraintTop_toBottomOf="@id/glass_face_lib" />

            <TextView
                android:id="@+id/glass_id_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24px"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/glass_text_color"
                android:textSize="54px"
                app:layout_constraintBottom_toBottomOf="@id/glass_people_name"
                app:layout_constraintLeft_toRightOf="@id/glass_people_name"
                app:layout_constraintTop_toTopOf="@id/glass_people_name" />

            <View
                android:id="@+id/people_glass_outline"
                android:layout_width="410px"
                android:layout_height="650px"
                android:visibility="invisible"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/text_fatal_peo"
                android:layout_width="120px"
                android:layout_height="42px"
                app:layout_constraintTop_toTopOf="@id/people_glass_outline"
                app:layout_constraintLeft_toLeftOf="@id/people_glass_outline"
                android:background="@color/red"
                android:layout_marginTop="18px"
                android:layout_marginStart="15px"
                android:text="危险人员"
                android:textSize="27px"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/text_fatal_peonum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30px"
                app:layout_constraintLeft_toRightOf="@id/text_fatal_peo"
                app:layout_constraintBottom_toBottomOf="@id/text_fatal_peo"
                app:layout_constraintTop_toTopOf="@id/text_fatal_peo"
                android:layout_marginStart="6px"
                android:textColor="@color/white"
                android:text="18"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/text_warning_peo"
                android:layout_width="120px"
                android:layout_height="42px"
                app:layout_constraintTop_toTopOf="@id/text_fatal_peo"
                app:layout_constraintBottom_toBottomOf="@id/text_fatal_peo"
                app:layout_constraintLeft_toRightOf="@id/text_fatal_peonum"
                android:layout_marginStart="18px"
                android:background="@color/yellow"
                android:gravity="center"
                android:text="重点人员"
                android:textColor="@color/black"
                android:textSize="27px"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/text_warning_peonum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30px"
                app:layout_constraintLeft_toRightOf="@id/text_warning_peo"
                app:layout_constraintBottom_toBottomOf="@id/text_warning_peo"
                app:layout_constraintTop_toTopOf="@id/text_warning_peo"
                android:layout_marginStart="6px"
                android:textColor="@color/white"
                android:text="10"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/glass_important_peoname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="48px"
                app:layout_constraintLeft_toLeftOf="@id/people_glass_outline"
                app:layout_constraintRight_toRightOf="@id/people_glass_outline"
                app:layout_constraintTop_toBottomOf="@id/text_fatal_peo"
                android:layout_marginTop="12px"
                />

            <TextView
                android:id="@+id/glass_important_peoidcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="33px"
                app:layout_constraintLeft_toLeftOf="@id/people_glass_outline"
                app:layout_constraintRight_toRightOf="@id/people_glass_outline"
                app:layout_constraintTop_toBottomOf="@id/glass_important_peoname"
                android:layout_marginTop="12px"
                />

            <ImageView
                android:id="@+id/divider_line_people"
                android:layout_width="0dp"
                android:layout_height="3dp"
                app:layout_constraintTop_toTopOf="@id/people_glass_outline"
                app:layout_constraintBottom_toBottomOf="@id/people_glass_outline"
                app:layout_constraintLeft_toLeftOf="@id/people_glass_outline"
                app:layout_constraintRight_toRightOf="@id/people_glass_outline"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/car_normal_divider"
                />

            <TextView
                android:id="@+id/glass_crime_type"
                android:layout_width="390px"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:textColor="@color/red"
                android:textSize="39px"
                android:paddingRight="24px"
                android:maxLines="4"
                android:ellipsize="end"
                app:layout_constraintLeft_toLeftOf="@id/people_glass_outline"
                app:layout_constraintRight_toRightOf="@id/people_glass_outline"
                app:layout_constraintTop_toBottomOf="@id/divider_line_people"
                android:layout_marginTop="24px"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/glass_bjd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            >

            <View
                android:id="@+id/bjr_glass_main_left_outline"
                android:layout_width="991px"
                android:layout_height="465px"
                android:layout_marginLeft="10px"
                android:visibility="invisible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/glass_text_afdd"
                android:layout_width="800px"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:ellipsize="start"
                android:gravity="center"
                android:maxLines="3"
                android:textColor="@color/glass_text_color"
                android:textSize="48px"
                app:layout_constraintLeft_toLeftOf="@id/bjr_glass_main_left_outline"
                app:layout_constraintRight_toRightOf="@id/bjr_glass_main_left_outline"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/bjd_info_glass_divider"
                android:layout_width="820px"
                android:layout_height="6px"
                android:layout_marginStart="100px"
                android:layout_marginTop="31px"
                android:background="@drawable/icon_line_normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/glass_text_afdd" />

            <TextView
                android:id="@+id/glass_text_bjnr"
                android:layout_width="800px"
                android:layout_height="wrap_content"
                android:layout_marginTop="31px"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="5"
                android:textColor="@color/glass_text_color"
                android:textSize="48px"
                app:layout_constraintLeft_toLeftOf="@id/bjr_glass_main_left_outline"
                app:layout_constraintRight_toRightOf="@id/bjr_glass_main_left_outline"
                app:layout_constraintTop_toBottomOf="@id/bjd_info_glass_divider" />

            <View
                android:id="@+id/bjr_glass_outline"
                android:layout_width="410px"
                android:layout_height="650px"
                android:visibility="invisible"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/glass_text_bjr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="288px"
                android:gravity="center"
                android:text="章子怡"
                android:textColor="@color/glass_text_color"
                android:textSize="48px"
                app:layout_constraintLeft_toLeftOf="@id/bjr_glass_outline"
                app:layout_constraintRight_toRightOf="@id/bjr_glass_outline"
                app:layout_constraintTop_toTopOf="@id/bjr_glass_outline" />

            <TextView
                android:id="@+id/glass_text_bjr_note"
                android:layout_width="745px"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:gravity="center"
                android:text="报警人"
                android:textColor="#6FC7E9"
                android:textSize="34px"
                app:layout_constraintLeft_toLeftOf="@id/bjr_glass_outline"
                app:layout_constraintRight_toRightOf="@id/bjr_glass_outline"
                app:layout_constraintTop_toBottomOf="@id/glass_text_bjr" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/img_pic_show_glass"
            android:layout_width="927px"
            android:layout_height="513px"
            android:scaleType="fitXY"
            android:layout_marginStart="30px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_zhzx"
        android:layout_width="78px"
        android:layout_height="78px"
        android:layout_marginEnd="210px"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/layout_fuction_logo"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/img_mai_glass"
            android:layout_width="78px"
            android:layout_height="78px"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_mai_max"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_zhzx"
            android:layout_width="wrap_content"
            android:layout_height="78px"
            android:layout_centerVertical="true"
            android:layout_marginStart="25px"
            android:gravity="left|center_vertical"
            android:text="指挥中心"
            android:textColor="#FFFFFF"
            android:textSize="31px"
            app:layout_constraintBottom_toBottomOf="@id/img_mai_glass"
            app:layout_constraintLeft_toRightOf="@id/img_mai_glass"
            app:layout_constraintTop_toTopOf="@id/img_mai_glass" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_glass_recordtime"
        android:layout_width="wrap_content"
        android:layout_height="70px"
        android:layout_marginBottom="6px"
        app:layout_constraintBottom_toTopOf="@id/layout_glass_content_show"
        app:layout_constraintLeft_toLeftOf="@id/layout_glass_content_show"
        app:layout_constraintRight_toRightOf="@id/layout_glass_content_show">

        <ImageView
            android:id="@+id/img_record_glass_note"
            android:layout_width="wrap_content"
            android:layout_height="65px"
            android:src="@drawable/icon_tall_red"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/glass_text_recordtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6px"
            android:gravity="left|top"
            android:textColor="@color/glass_text_color"
            android:textSize="54px"
            app:layout_constraintBottom_toBottomOf="@id/img_record_glass_note"
            app:layout_constraintLeft_toRightOf="@id/img_record_glass_note"
            app:layout_constraintTop_toTopOf="@id/img_record_glass_note" />

        <TextView
            android:id="@+id/text_zhifa_notice"
            android:layout_width="wrap_content"
            android:layout_height="65px"
            android:layout_marginStart="54px"
            android:gravity="left|top"
            android:text="执法中..."
            android:textColor="@color/red"
            android:textSize="54px"
            app:layout_constraintBottom_toBottomOf="@id/glass_text_recordtime"
            app:layout_constraintLeft_toRightOf="@id/glass_text_recordtime"
            app:layout_constraintTop_toTopOf="@id/glass_text_recordtime" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_glass_recordtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:constraint_referenced_ids="img_record_glass_note, glass_text_recordtime, text_zhifa_notice" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_tag_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_fuction_logo"
        android:layout_width="wrap_content"
        android:layout_height="66px"
        android:layout_marginTop="24px"
        app:layout_constraintBottom_toTopOf="@id/layout_glass_recordtime"
        app:layout_constraintLeft_toLeftOf="@id/layout_glass_content_show"
        app:layout_constraintRight_toRightOf="@id/layout_glass_content_show">

        <ImageView
            android:id="@+id/icon_car_logo_glass"
            android:layout_width="70px"
            android:layout_height="70px"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_icon_car_id"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_photo_logo_glass"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginStart="70px"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_icon_photo_id"
            app:layout_constraintLeft_toRightOf="@id/icon_car_logo_glass"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_face_recog"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginStart="70px"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_icon_face_id"
            app:layout_constraintLeft_toRightOf="@id/icon_photo_logo_glass"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_recording"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginStart="70px"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_icon_movie"
            app:layout_constraintLeft_toRightOf="@id/icon_face_recog"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.hiar.ar110.widget.MySurfaceView
        android:id="@+id/face_view"
        android:layout_width="1920px"
        android:layout_height="1080px"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>