<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VehicleRecordFragment"
    android:background="#2D68DB"
    >

    <RelativeLayout
        android:id="@+id/jd_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/layout_headline"
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <RelativeLayout
                android:id="@+id/layout_back"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:clickable="true"
                >

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_qbak" />

            </RelativeLayout>

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/photo_inspect_title"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_commu_phone"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@id/layout_headline"
            android:layout_centerHorizontal="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/jd_devider_line"
                android:layout_width="336dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/jd_devider_line" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >

                <TextView
                    android:id="@+id/text_commu_notice"
                    android:layout_width="126dp"
                    android:layout_height="25dp"
                    android:gravity="left|center_vertical"
                    android:text="指挥中心通讯中"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_commu_icon"
                    android:layout_width="17dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/text_commu_notice"
                    android:src="@drawable/icon_mai_max" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/people_list_notrecog"
        android:layout_width="328dp"
        android:layout_height="match_parent"
        android:layout_below="@id/jd_title_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_coner_bg"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/text_date_sel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:textColor="#333333"
            android:textSize="21sp"
            android:gravity="left|center_vertical"
            android:text=""
            android:clickable="false"
            />

        <ImageView
            android:id="@+id/img_drop_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toRightOf="@id/text_date_sel"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/text_date_sel"
            app:layout_constraintBottom_toBottomOf="@id/text_date_sel"
            android:src="@drawable/ic_icon_up"
            />

        <View
            android:id="@+id/bottom_offset"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_cropimg_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_date_sel"
            app:layout_constraintBottom_toTopOf="@id/bottom_offset"
            android:layout_width="312dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:scrollbarSize="6dp"
            android:scrollbars="vertical"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_datelist"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_date_sel"
            app:layout_constraintBottom_toTopOf="@id/bottom_offset"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_width="312dp"
            android:layout_height="0dp"
            android:background="@drawable/round_coner_bg"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>