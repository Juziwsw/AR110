<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_set"
    android:theme="@style/ThemeOverlay.AR110.FullscreenContainer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tpo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_welcome_you"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/text_wellcom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <ImageView
                        android:id="@+id/img_settings"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="24dp"
                        android:scaleType="centerInside"
                        app:layout_constraintBottom_toBottomOf="@id/text_wellcom"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_wellcom"
                        android:src="@drawable/icon_user" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_commu_phone"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_welcome_you">

                    <ImageView
                        android:id="@+id/jd_devider_line"
                        android:layout_width="336dp"
                        android:layout_height="1dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/jd_devider_line" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/jd_devider_line"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:id="@+id/text_commu_notice"
                            android:layout_width="126dp"
                            android:layout_height="25dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:gravity="center_horizontal|top"
                            android:text="指挥中心通讯中"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/img_commu_icon"
                            android:layout_width="17dp"
                            android:layout_height="25dp"
                            app:layout_constraintTop_toTopOf="@id/text_commu_notice"
                            app:layout_constraintBottom_toBottomOf="@id/text_commu_notice"
                            app:layout_constraintLeft_toRightOf="@id/text_commu_notice"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/icon_mai_max" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_coptask"
                android:layout_width="328dp"
                android:layout_height="142dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/mk_set_police"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_title">

                <ImageView
                    android:id="@+id/img_case_logo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="26dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_icon_case_select"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_handle_jd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="left|center_vertical"
                    android:text="处警任务"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_case_logo"
                    app:layout_constraintLeft_toRightOf="@id/img_case_logo"
                    app:layout_constraintTop_toTopOf="@id/img_case_logo" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="19dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_into_grey"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_task_discribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left|center_vertical"
                    android:text="警单处理、警情现场处置"
                    android:textColor="#F4F4F4"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="@id/img_case_logo"
                    app:layout_constraintTop_toBottomOf="@id/img_case_logo" />

                <TextView
                    android:id="@+id/text_not_handled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="left|center_vertical"
                    android:text="未处理"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/text_has_handled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="58dp"
                    android:gravity="left|center_vertical"
                    android:text="处理中"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_not_handled"
                    app:layout_constraintBottom_toBottomOf="@id/text_not_handled"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_patrol_task"
                android:layout_width="328dp"
                android:layout_height="142dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/mk_set_car"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_coptask">

                <ImageView
                    android:id="@+id/img_patrol_logo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="26dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_icon_plan_select"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_handle_patrol_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="left|center_vertical"
                    android:text="巡逻任务"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_patrol_logo"
                    app:layout_constraintLeft_toRightOf="@id/img_patrol_logo"
                    app:layout_constraintTop_toTopOf="@id/img_patrol_logo" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="19dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_into_grey"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_task_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left|center_vertical"
                    android:text="巡逻任务创建、巡逻现场记录"
                    android:textColor="#F4F4F4"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="@id/img_patrol_logo"
                    app:layout_constraintTop_toBottomOf="@id/img_patrol_logo" />

                <TextView
                    android:id="@+id/text_patrol_handling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="left|center_vertical"
                    android:text="处理中"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/text_patrol_handled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="58dp"
                    android:gravity="left|center_vertical"
                    android:text="已处理"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_patrol_handling"
                    app:layout_constraintBottom_toBottomOf="@id/text_patrol_handling"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_floating_task"
                android:layout_width="328dp"
                android:layout_height="142dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/mk_set_check"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_patrol_task">

                <ImageView
                    android:id="@+id/img_floating_logo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="26dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_icon_plan_check"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_handle_floating_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="left|center_vertical"
                    android:text="流动人口核查"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_floating_logo"
                    app:layout_constraintLeft_toRightOf="@id/img_floating_logo"
                    app:layout_constraintTop_toTopOf="@id/img_floating_logo" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="19dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_into_grey"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_floating_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left|center_vertical"
                    android:text="流动核查任务"
                    android:textColor="#F4F4F4"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="@id/img_floating_logo"
                    app:layout_constraintTop_toBottomOf="@id/img_floating_logo" />


                <TextView
                    android:id="@+id/text_floating_handling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginBottom="28dp"
                    android:gravity="left|center_vertical"
                    android:text="处理中"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/text_floating_handled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="58dp"
                    android:gravity="left|center_vertical"
                    android:text="已处理"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/text_floating_handling"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_floating_handling" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_chatting_task"
                android:layout_width="328dp"
                android:layout_height="142dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/mk_set_task"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_floating_task">

                <ImageView
                    android:id="@+id/img_chatting_logo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="26dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_icon_plan_check"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_handle_chatting_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="left|center_vertical"
                    android:text="合成作战"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_chatting_logo"
                    app:layout_constraintLeft_toRightOf="@id/img_chatting_logo"
                    app:layout_constraintTop_toTopOf="@id/img_chatting_logo" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="19dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_into_grey"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>