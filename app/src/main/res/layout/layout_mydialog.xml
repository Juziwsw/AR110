<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="336dp"
    android:layout_height="142dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320dp"
        android:layout_height="126dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/round_coner_bg"
        >
        <TextView
            android:id="@+id/text_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有处理中的巡逻任务，请先结束"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            />

        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="104dp"
            android:layout_height="32dp"
            android:text="取消"
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/round_button_bg"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/text_ok"
            android:layout_width="104dp"
            android:layout_height="32dp"
            android:text="确认"
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_cancel"
            app:layout_constraintBottom_toBottomOf="@id/text_cancel"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_button_bg"
            android:clickable="true"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>