<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/jd_item_bg"
    android:id="@+id/layout_adapter"
    >

    <TextView
        android:id="@+id/text_time"
        android:layout_width="@dimen/jd_head_width"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/jd_item_vspace"
        android:layout_marginLeft="@dimen/jd_head_start"
        android:textSize="14sp"
        android:textColor="#999999"
        android:text="报警时间:"
        android:gravity="right|center_vertical"
        />

    <TextView
        android:id="@+id/text_time_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/jd_item_vspace"
        android:layout_toEndOf="@id/text_time"
        android:layout_marginLeft="4dp"
        android:textSize="14sp"
        android:textColor="#4582ff"
        android:text="18:18:35 06-26"
        android:gravity="left|center_vertical"
        />

    <ImageView
        android:id="@+id/img_status"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/jd_item_vspace"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:src="@drawable/bq_home_unprocessed"
        />

    <TextView
        android:id="@+id/text_jdnum"
        android:layout_width="@dimen/jd_head_width"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/jd_item_vspace"
        android:layout_marginLeft="@dimen/jd_head_start"
        android:layout_below="@id/text_time"
        android:textSize="14sp"
        android:textColor="#999999"
        android:text="警单编号:"
        android:gravity="right|center_vertical"
        />

    <TextView
        android:id="@+id/text_jdnum_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/jd_item_vspace"
        android:layout_below="@id/text_time"
        android:layout_toEndOf="@id/text_jdnum"
        android:layout_marginLeft="4dp"
        android:textSize="14sp"
        android:textColor="#4582ff"
        android:text="2019080725"
        android:gravity="left|center_vertical"
        />


    <TextView
        android:id="@+id/text_loc"
        android:layout_width="@dimen/jd_head_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_jdnum"
        android:layout_marginTop="@dimen/jd_item_vspace"
        android:layout_marginLeft="@dimen/jd_head_start"
        android:textSize="14sp"
        android:textColor="#999999"
        android:text="报警地址:"
        android:gravity="right|center_vertical"
        />

    <TextView
        android:id="@+id/text_loc_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_jdnum"
        android:layout_marginTop="@dimen/jd_item_vspace"
        android:layout_marginLeft="8dp"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="盛夏路570号"
        android:layout_toEndOf="@id/text_loc"
        android:layout_marginStart="4dp"
        android:singleLine="true"
        android:ellipsize="start"
        android:gravity="left|center_vertical"
        />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="@dimen/jd_head_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/jd_item_vspace"
        android:layout_below="@id/text_loc_val"
        android:layout_marginLeft="@dimen/jd_head_start"
        android:textSize="14sp"
        android:textColor="#999999"
        android:text="报警内容:"
        android:gravity="right|center_vertical"
        />

    <TextView
        android:id="@+id/text_content_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_loc_val"
        android:layout_marginTop="@dimen/jd_item_vspace"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="打架斗殴"
        android:layout_toEndOf="@id/text_content"
        android:layout_marginStart="4dp"
        android:singleLine="false"
        android:gravity="left|center_vertical"
        android:paddingBottom="6dp"
        android:maxLines="3"
        android:ellipsize="end"
        />

</RelativeLayout>
