<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradual_color_bg"
    >

    <RelativeLayout
        android:id="@+id/jd_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/layout_headline"
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <RelativeLayout
                android:id="@+id/layout_back"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:clickable="true"
                >

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_qbak" />

            </RelativeLayout>

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/people_inspect_title"
                android:textColor="#ffffff"
                android:textSize="18sp" />
            <RelativeLayout
                android:id="@+id/rl_state_connect"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/iv_glasses"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_into_glasses_invalid" />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/iv_glasses"
                    android:src="@drawable/icon_connect"
                    android:visibility="gone" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_commu_phone"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@id/layout_headline"
            android:layout_centerHorizontal="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/jd_devider_line"
                android:layout_width="336dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/jd_devider_line" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >

                <TextView
                    android:id="@+id/text_commu_notice"
                    android:layout_width="126dp"
                    android:layout_height="25dp"
                    android:gravity="left|center_vertical"
                    android:text="指挥中心通讯中"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_commu_icon"
                    android:layout_width="17dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/text_commu_notice"
                    android:src="@drawable/icon_mai_max" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/vdivider_top"
        android:layout_width="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@id/jd_title_layout"
        android:layout_height="1dp"
        android:background="#1Affffff"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_switch"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vdivider_top"
        >

        <View
            android:id="@+id/vdivider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:background="@color/white30"
            />

        <TextView
            android:id="@+id/text_recog"
            app:layout_constraintRight_toLeftOf="@id/vdivider"
            app:layout_constraintTop_toTopOf="@id/vdivider"
            app:layout_constraintBottom_toBottomOf="@id/vdivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="45dp"
            android:textColor="@color/white"
            android:text="已识别"
            android:textSize="14sp"
            android:gravity="right|center_vertical"
            android:background="@drawable/population_switch_bg"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            />

        <TextView
            android:id="@+id/text_unrecog"
            app:layout_constraintLeft_toRightOf="@id/vdivider"
            app:layout_constraintTop_toTopOf="@id/vdivider"
            app:layout_constraintBottom_toBottomOf="@id/vdivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:textColor="@color/white"
            android:text="未识别"
            android:textSize="14sp"
            android:background="@drawable/population_switch_bg"
            android:gravity="left|center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/people_list_notrecog"
        android:layout_width="328dp"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_switch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_coner_bg"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/text_date_sel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:textColor="#333333"
            android:textSize="21sp"
            android:gravity="left|center_vertical"
            android:text=""
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/img_drop_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toRightOf="@id/text_date_sel"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/text_date_sel"
            app:layout_constraintBottom_toBottomOf="@id/text_date_sel"
            android:src="@drawable/ic_icon_up"
            />

        <View
            android:id="@+id/bottom_offset"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_cropimg_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_date_sel"
            app:layout_constraintBottom_toTopOf="@id/bottom_offset"
            android:layout_width="312dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:scrollbarSize="6dp"
            android:scrollbars="vertical"
            />

        <!--<ImageView
            app:layout_constraintTop_toTopOf="@id/text_date_sel"
            app:layout_constraintBottom_toBottomOf="@id/text_date_sel"
            app:layout_constraintLeft_toRightOf="@id/text_date_sel"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />-->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_datelist"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_date_sel"
            app:layout_constraintBottom_toTopOf="@id/bottom_offset"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_width="312dp"
            android:layout_height="0dp"
            android:background="@drawable/round_coner_bg"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/people_list_recog"
        android:layout_width="328dp"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_switch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_peopleinfo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/text_end_task"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:background="@drawable/population_done_btn_bg"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="完成核查"
        />
    <com.hiar.ar110.widget.MySurfaceView
        android:id="@+id/face_view"
        android:layout_width="1920px"
        android:layout_height="1080px"
        android:layout_centerInParent="true"
        android:visibility="visible" />

</RelativeLayout>