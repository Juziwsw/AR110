<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_audio_item"
    >

    <ImageView
        android:id="@+id/img_upload_status"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:src="@drawable/icon_not_upload"
        />

    <TextView
        android:id="@+id/text_audio_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/img_upload_status"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:textColor="#333333"
        android:gravity="left|center_vertical"
        />

    <TextView
        android:id="@+id/text_audio_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_audio_name"
        app:layout_constraintLeft_toLeftOf="@id/text_audio_name"
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        android:textColor="#B7BBC4"
        android:gravity="left|center_vertical"
        />

    <TextView
        android:id="@+id/text_audio_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_audio_time"
        app:layout_constraintBottom_toBottomOf="@id/text_audio_time"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        android:textColor="#B7BBC4"
        android:gravity="right|center_vertical"
        />
</androidx.constraintlayout.widget.ConstraintLayout>