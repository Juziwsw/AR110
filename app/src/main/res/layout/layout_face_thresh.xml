<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="224dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_coner_bg"
    >

    <TextView
        android:id="@+id/text_face_cancel"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="取消"
        android:textColor="#0D67E5"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="24dp"
        android:clickable="true"
        android:gravity="left|center_vertical"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="请选择"
        android:textColor="#A2B0CC"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_face_cancel"
        app:layout_constraintBottom_toBottomOf="@id/text_face_cancel"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/text_face_confirm"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="确定"
        android:textColor="#0D67E5"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_face_cancel"
        app:layout_constraintBottom_toBottomOf="@id/text_face_cancel"
        android:layout_marginEnd="24dp"
        android:gravity="right|center_vertical"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/img_devider_numberpicker"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/myinfo_devicer_line"
        app:layout_constraintTop_toBottomOf="@id/text_face_cancel"
        android:layout_marginTop="14dp"
        />

    <View
        android:layout_width="232dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="@id/face_thresh_num"
        app:layout_constraintBottom_toBottomOf="@id/face_thresh_num"
        app:layout_constraintRight_toRightOf="@id/face_thresh_num"
        app:layout_constraintLeft_toLeftOf="@id/face_thresh_num"
        android:background="@drawable/round_bg_face_thresh"
        />

    <NumberPicker
        android:id="@+id/face_thresh_num"
        android:layout_width="100dp"
        android:layout_height="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_face_cancel"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginTop="14dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>