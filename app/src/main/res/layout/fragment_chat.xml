<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light_blue_600"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_qbak" />
        <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/white_color"
            android:textSize="18dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_detail"
            android:padding="8dp"
            android:textColor="@color/white_color"
            android:text="@string/group_detail"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llContent"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/window_background_light">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_chat_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <Button
            android:id="@+id/tv_to_incall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_group_incall_notice_selector"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:textSize="13sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:drawablePadding="10dp"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/icon_call_video"
            android:drawableEnd="@drawable/ic_enter_blue"
            android:textColor="@color/color_accent"
            android:visibility="gone"
            tools:text="发起的多人会议正在进行中"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_chat_type"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_margin="10dp"
            android:visibility="visible"
            android:src="@drawable/chat_type_call"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_input_bg"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:minHeight="30dp"
                android:paddingStart="5dp"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chat_call_selector"
                android:gravity="center"
                android:text="@string/immediately_call"
                android:visibility="gone"
                android:textColor="@color/white_color" />
        </RelativeLayout>

        <com.hiscene.imui.widget.StateButton
            android:id="@+id/btn_send"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:padding="1dp"
            android:text="@string/send_msg"
            android:textColor="@color/white_color"
            android:textSize="13sp"
            android:visibility="visible"
            app:normalBackgroundColor="@color/color_accent"
            app:pressedBackgroundColor="#774266F5"
            app:radius="5dp" />

        <ImageView
            android:id="@+id/ivAudio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_audio"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivEmo"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icon_emoji"
            android:visibility="gone"
            tools:ignore="ContentDescription" />


        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/icon_add"
            android:visibility="gone"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <!--表情-->
        <include
            android:id="@+id/rlEmotion"
            layout="@layout/include_emoji_layout"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
